<UserControl x:Class="Elogio.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Elogio.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400">
    <UserControl.DataContext>
        <vm:LoginViewModel/>
    </UserControl.DataContext>

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <StackPanel>
            <TextBlock Text="Elogio" FontSize="32" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Server URL" Margin="0,0,0,5"/>
            <TextBox Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,15" Padding="8"/>

            <TextBlock Text="Username" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,15" Padding="8"/>

            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                         Margin="0,0,0,10" Padding="8"
                         PasswordChanged="PasswordBox_PasswordChanged"/>

            <CheckBox Content="Remember credentials"
                      IsChecked="{Binding RememberCredentials}"
                      Margin="0,0,0,20"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"/>

            <Button Content="Login"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsLoggingIn, Converter={StaticResource InverseBoolConverter}}"
                    Padding="15,10"
                    FontSize="14"/>

            <TextBlock Text="Logging in..."
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       Visibility="{Binding IsLoggingIn, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
