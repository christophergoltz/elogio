<ui:FluentWindow x:Class="Elogio.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:viewModels="clr-namespace:Elogio.ViewModels"
                 mc:Ignorable="d"
                 Title="{Binding Title}"
                 Height="700" Width="1100"
                 MinHeight="500" MinWidth="800"
                 WindowStartupLocation="CenterScreen"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica" d:DataContext="{d:DesignInstance viewModels:MainViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="{Binding Title}"
                     ShowMaximize="True"
                     ShowMinimize="True" />

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- Update Available Banner -->
            <Border x:Name="UpdateBanner"
                    Visibility="Collapsed"
                    Background="{ui:ThemeResource SystemFillColorNeutralBackgroundBrush}"
                    VerticalAlignment="Top"
                    Panel.ZIndex="100"
                    Padding="16,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ui:SymbolIcon Grid.Column="0"
                                   Symbol="ArrowDownload24"
                                   FontSize="20"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="UpdateVersionText"
                                   Text="A new version is available"
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="UpdateDetailsText"
                                   Text="Click 'Install Now' to update and restart"
                                   FontSize="12"
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <ui:Button Grid.Column="2"
                               x:Name="InstallUpdateButton"
                               Content="Install Now"
                               Appearance="Primary"
                               Margin="8,0"
                               Click="InstallUpdateButton_Click"/>

                    <ui:Button Grid.Column="3"
                               Content="Later"
                               Appearance="Secondary"
                               Click="DismissUpdateButton_Click"/>
                </Grid>
            </Border>

            <!-- Main layout with sidebar (hidden during login) -->
            <Grid x:Name="MainLayout" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="210" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0"
                        Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                        BorderBrush="{ui:ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Employee info -->
                        <StackPanel Grid.Row="0" Margin="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ui:SymbolIcon Grid.Column="0" Symbol="Person24" FontSize="32" VerticalAlignment="Top" />
                                <TextBlock Grid.Column="1"
                                           x:Name="EmployeeNameText"
                                           Text="Employee"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap" />
                            </Grid>
                        </StackPanel>

                        <!-- Today's Balance + Kommen/Gehen Buttons -->
                        <StackPanel Grid.Row="1" Margin="12,0,12,12">
                            <!-- Today's Balance -->
                            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Today label spanning both columns -->
                                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                                               Text="Today"
                                               FontSize="11"
                                               Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,6" />

                                    <!-- Time entries (left side) -->
                                    <StackPanel x:Name="TimeEntriesPanel" Grid.Row="1" Grid.Column="0"
                                                VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <!-- Will be populated dynamically -->
                                    </StackPanel>

                                    <!-- Separator (centered) -->
                                    <Border Grid.Row="1" Grid.Column="1"
                                            Width="1"
                                            Background="{ui:ThemeResource ControlStrokeColorDefaultBrush}"
                                            Margin="10,0"
                                            x:Name="TimeEntriesSeparator"
                                            Visibility="Collapsed" />

                                    <!-- Balance info (right side) -->
                                    <StackPanel Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <!-- Worked / Expected -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock x:Name="TodayWorkedText"
                                                       Text="0:00"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" />
                                            <TextBlock x:Name="TodayExpectedText"
                                                       Text="/ 7:00"
                                                       FontSize="12"
                                                       Margin="4,0,0,0"
                                                       VerticalAlignment="Bottom"
                                                       Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}" />
                                        </StackPanel>
                                        <!-- Difference -->
                                        <TextBlock x:Name="TodayDifferenceText"
                                                   Text="(-7:00)"
                                                   FontSize="11"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,2,0,0"
                                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <ui:Button x:Name="PunchButton"
                                       Content="STEMPELN"
                                       Appearance="Secondary"
                                       HorizontalAlignment="Stretch"
                                       IsEnabled="False"
                                       Click="PunchButton_Click">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon x:Name="PunchButtonIcon" Symbol="Clock24" />
                                </ui:Button.Icon>
                            </ui:Button>
                        </StackPanel>

                        <!-- Navigation -->
                        <StackPanel Grid.Row="2" Margin="6,0">
                            <ui:Button Content="Monthly Calendar"
                                       Appearance="Transparent"
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Command="{Binding NavigateToCalendarCommand}">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon Symbol="CalendarLtr24" />
                                </ui:Button.Icon>
                            </ui:Button>
                        </StackPanel>

                        <!-- Footer -->
                        <StackPanel Grid.Row="3" Margin="6,0,6,12">
                            <ui:Button Content="Settings"
                                       Appearance="Transparent"
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Command="{Binding NavigateToSettingsCommand}">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon Symbol="Settings24" />
                                </ui:Button.Icon>
                            </ui:Button>

                            <!-- Separator -->
                            <Separator Margin="0,8,0,8" />

                            <ui:Button Content="Logout"
                                       Appearance="Transparent"
                                       HorizontalAlignment="Stretch"
                                       HorizontalContentAlignment="Left"
                                       Click="LogoutButton_Click">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon Symbol="SignOut24" />
                                </ui:Button.Icon>
                            </ui:Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Frame -->
                <Frame Grid.Column="1"
                       x:Name="ContentFrame"
                       NavigationUIVisibility="Hidden" />
            </Grid>

            <!-- Login Frame (shown when not authenticated) -->
            <Frame x:Name="LoginFrame"
                   NavigationUIVisibility="Hidden"
                   Visibility="Visible" />
                   
            <!-- Loading Overlay (for auto-login) -->
            <Grid x:Name="LoadingOverlay" Visibility="Collapsed" Background="{ui:ThemeResource ApplicationBackgroundBrush}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="ELOGIO"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" />
                    <ui:ProgressRing IsIndeterminate="True"
                                     Width="40" Height="40"
                                     Margin="0,24,0,0" />
                    <TextBlock Text="Connecting..."
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"
                               Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Grid>

            <!-- Snackbar for toast notifications -->
            <ui:SnackbarPresenter x:Name="SnackbarPresenter" />
        </Grid>
    </Grid>
</ui:FluentWindow>
